<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.myapplication.Main2Activity">

    <EditText
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Name"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Products : "
        android:textSize="19sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/yu"
        android:popupBackground="@color/textt"
        android:id="@+id/spinner"

        ></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toppings :"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:textSize="19sp"
        android:textStyle="bold"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiogrup"
        android:layout_marginTop="5dp"
        android:layout_marginStart="18dp"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oreo"
            android:textSize="15sp"
            android:id="@+id/oreo"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vanilla"
            android:textSize="15sp"
            android:id="@+id/vanilla"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raspberry"
            android:textSize="15sp"
            android:id="@+id/berry"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:text="Quantity :"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onClickMin"
            android:text="-"
            android:textSize="18sp"
            android:id="@+id/min"
            />
        <TextView
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:textSize="18sp"
            android:id="@+id/blank"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onClickPlus"
            android:text="+"
            android:textSize="18sp"
            android:id="@+id/plus"
            />

    </LinearLayout>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="18dp"
        android:textSize="18sp"
        android:id="@+id/total"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp">
        <Button
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="Reset"
            android:id="@+id/reset"
            android:onClick="onClickReset"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:text="Order"
            android:id="@+id/order"
            android:onClick="onClickOrder"
            />
    </LinearLayout>

</LinearLayout>